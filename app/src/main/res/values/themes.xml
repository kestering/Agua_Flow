<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Agua_Flow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="Theme.Agua_Flow" parent="Base.Theme.Agua_Flow">
        <!-- Remove any buttonStyle definitions to avoid conflicts -->
    </style>

    <style name="btn_style" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
    </style>

    <!-- Custom button style -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
        <item name="android:elevation">8dp</item> <!-- Add elevation for shadow effect -->
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">9</item>
        <item name="android:shadowColor">#000000</item> <!-- Black shadow color -->
    </style>

</resources>
