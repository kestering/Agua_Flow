<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryActivity"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/textAguaFlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Ãgua Flow"
        android:fontFamily="cursive"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="0"
        android:shadowRadius="9" />

    <View
        android:id="@+id/lineBelowText"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/textAguaFlow"
        android:layout_marginTop="4dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:background="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/avatar"
        android:scaleType="centerCrop"
        android:padding="10dp"
        android:elevation="8dp" />

    <TextView
        android:id="@+id/textTempoTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAguaFlow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Tempo Total"
        android:textColor="#FFFFFF"
        android:textSize="44sp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="0"
        android:shadowRadius="9" />

    <TextView
        android:id="@+id/textTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTempoTotal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="00:00"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="0"
        android:shadowRadius="9" />

    <ImageView
        android:id="@+id/graphImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/textTimer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/results"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/textLitrosGastos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/graphImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Litros Gastos"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="0"
        android:shadowRadius="9" />

    <TextView
        android:id="@+id/textLitros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLitrosGastos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="138,78L"
        android:textColor="#FFFFFF"
        android:textSize="46sp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="0"
        android:shadowRadius="9" />

    <TextView
        android:id="@+id/textSummaryMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLitros"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="0"
        android:shadowRadius="9"
        android:gravity="center_horizontal" /> <!-- Center the text horizontally -->

    <Button
        android:id="@+id/buttonBackToHome"
        style="@style/CustomButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textSummaryMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Voltar"
        />
</RelativeLayout>
